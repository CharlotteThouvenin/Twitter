script(src="/javascripts/search-bar.js")
navbar(class='navbar navbar-expand-lg navbar-light bg-white')
    a(class='navbar-brand ms-2' href="/")
        img(width="30" height="30" src='/images/twitter.svg')
    button(class='navbar-toggler')
        span(class='navbar-toggler-icon')
    div(class="collapse navbar-collapse")
        if isAuthenticated
            form(action="") 
                input(type='text' class='form-control me-2' id='search-input' placeholder='search')
                div(id='search-menu-container')
            ul(class='navbar-nav ms-auto')
                li(class='nav-item active')
                    a(class="btn btn-primary btn-tweet me-2" href="/tweets/new") Tweet
                li(class='nav-item active')
                    a(class="btn btn-primary btn-tweet me-2" href="/auth/signout") Deconnexion
        else
            ul(class='navbar-nav ms-auto')
                li(class='nav-item')
                    a(class="nav-link" href="/auth/signin/form") Connexion
                li(class='nav-item')
                    a(class="nav-link" href="/users/signup/form") Inscription
